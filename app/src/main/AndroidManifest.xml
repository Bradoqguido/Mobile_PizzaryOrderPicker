<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jefersoneduardoguido.pizzafacil">

    <application
        android:allowBackup="true"
        android:icon="@drawable/pizza"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pizza"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SaborActivity"
            android:label="@string/title_activity_sabor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.PedidoActivity"
            android:label="@string/title_activity_pedido"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ListagemDeItensActivity"
            android:label="@string/title_activity_listagem_de_itens"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activity.MontagemPizzaActivity"
            android:label="@string/title_activity_montagem_pizza"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>